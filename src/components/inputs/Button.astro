---
import clsx from 'clsx';

interface Props {
	type: 'submit' | 'reset' | 'button' | null | undefined;
	class?: string;
}

const props = Astro.props;
---

<button
	class={clsx(
		'rounded-md border bg-white p-1 transition-colors hover:bg-ghall-green hover:text-white',
		props.class
	)}
	type={props.type}><slot /></button
>
