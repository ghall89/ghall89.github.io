---
import { Icon } from 'astro-icon/components';

interface Props {
	icon?: string;
	label: string;
}

const { icon, label } = Astro.props;
---

<li
	class="m-2 flex w-fit items-center gap-2 rounded-full border border-gray-200 bg-white/90 px-4 py-1 text-slate-700"
>
	{icon && <Icon name={icon} />}
	{label}
</li>
