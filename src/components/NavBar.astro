---
import { Icon } from "astro-icon/components";

const navLinks: { label: string; key: string; icon: string }[] = [
  {
    label: "Home",
    key: "home",
    icon: "nav/house-solid",
  },
  {
    label: "About",
    key: "about",
    icon: "nav/circle-info-solid",
  },
  {
    label: "Skills",
    key: "skill",
    icon: "nav/wrench-solid",
  },
  {
    label: "Work",
    key: "work",
    icon: "nav/briefcase-solid",
  },
  {
    label: "Contact",
    key: "contact",
    icon: "nav/envelope-solid",
  },
];
---

<nav class="absolute z-50 h-fit w-dvw top-0" x-data="{ open: false }">
  <!-- Mobile Navbar -->
  <div class="overflow-hidden md:hidden z-100 m-3 flex items-center justify-center gap-8 rounded-full border border-gray-200 bg-white/90 p-3 backdrop-blur-lg w-fit transition-all" :class="open ? 'max-w-fit' : 'max-w-5">
    <button x-on:click="open = !open" class="text-xl"><Icon x-show="!open" name="nav/bars-solid" /><Icon x-show="open" name="nav/xmark-solid" /></button>
    {
      navLinks.map(({ key, icon }, i) => (
          <button
            id={`${key}-nav-item`}
            x-on:click={`window.location.hash = '#${key}', open = false`}
            class="flex items-center gap-1 hover:opacity-65"

            x-show="open"
                       x-transition:enter="transition ease-out duration-300"
                       x-transition:enter-start="opacity-0 translate-x-4"
                       x-transition:enter-end="opacity-100 translate-x-0"
                       x-transition:leave="transition ease-in duration-200"
                       x-transition:leave-start="opacity-100 translate-x-0"
                       x-transition:leave-end="opacity-0 -translate-x-4"
                       style={`transition-delay: ${i * 50}ms`}
          >
            <Icon name={icon} />
          </button>
      ))
    }
  </div>

  <!-- Full Navbar -->
  <div
    class="z-100 m-3 justify-center gap-8 rounded-full border border-gray-200 bg-white/90 p-3 backdrop-blur-lg w-fit mx-auto max-md:hidden"
  >
    <ul
      class="mx-6 flex items-center gap-4"
    >
      {
        navLinks.map(({ label, key, icon }) => (
          <li>
            <button
              id={`${key}-nav-item`}
              x-on:click={`window.location.hash = '#${key}'`}
              class="flex items-center gap-1 max-md:text-2xl hover:opacity-65 transition-colors"
              :class={`activeTab === '${key}' && 'text-ghall-green'`}
            >
              <Icon name={icon} />
              <span class="font-semibold">{label}</span>
            </button>
          </li>
        ))
      }
    </ul>
  </div>
</nav>
