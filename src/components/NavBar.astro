---
import { Icon } from "astro-icon/components";

const navLinks: { label: string; key: string; icon: string }[] = [
  {
    label: "Home",
    key: "home",
    icon: "nav/house-solid",
  },
  {
    label: "About",
    key: "about",
    icon: "nav/circle-info-solid",
  },
  {
    label: "Skills",
    key: "skill",
    icon: "nav/wrench-solid",
  },
  {
    label: "Work",
    key: "work",
    icon: "nav/briefcase-solid",
  },
  {
    label: "Contact",
    key: "contact",
    icon: "nav/envelope-solid",
  },
];
---

<nav class="absolute bottom-0 z-50 h-fit w-dvw md:top-0">
  <div
    class="z-100 m-3 flex items-center justify-center gap-8 rounded-full border border-gray-200 bg-white/90 p-3 backdrop-blur-lg w-fit mx-auto"
  >
    <ul
      class="mx-6 flex items-center gap-8 md:gap-4"
    >
      {
        navLinks.map(({ label, key, icon }) => (
          <li>
            <button
              id={`${key}-nav-item`}
              x-on:click={`window.location.hash = '#${key}'`}
              class="flex items-center gap-1 max-md:text-2xl hover:opacity-65 transition-colors"
              :class={`activeTab === '${key}' && 'text-ghall-green'`}
            >
              <Icon name={icon} />
              <span class="hidden font-semibold md:block">{label}</span>
            </button>
          </li>
        ))
      }
    </ul>
  </div>
</nav>
